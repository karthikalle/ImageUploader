import dataEntry.DisplayExisting;
import dataEntry.FileChooser;
import dataEntry.GUI_DataEntry;
import junit.framework.Assert;
import junit.framework.TestCase;

public class DisplayExisting {
	public AmazonSimpleDB sdb;
	public GUI_DataEntry gde;
	public Item testItem;
	publiv DisplayExisting de;
	
	@Before
	public void setup () {
		gde = new GUI_DataEntry(){
			public String validateFile() {
				return "/Users/karthikalle/Desktop/testimages/Cap.png";
			}
		};		
		gde.word = "Cup";
		gde.frequency = "high";
		gde.imageability = "high";
		gde.categoryName = "NonLiving";
		gde.uploadToSimpleDB();
		String selectExpression = "select * from `" + "mosswords" + "` where itemName() = '"+gde.word+"'";
	    SelectRequest selectRequest = new SelectRequest(selectExpression);
	
	    for(Item item: sdb.select(selectRequest).getItems()) {
	    	if(item.getName().equals(gde.word)) {
	    		testItem = item;
	    	}
	    }
		de = new DisplayExisting();
		
	}
	@Test
	public void testGetWordValue() {
		assertEquals("NonLiving", de.getAttributeValue(testItem, "Category"));

	}

}
